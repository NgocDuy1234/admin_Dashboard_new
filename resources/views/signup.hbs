<div class='container mt-5'>
    <div class='row justify-content-center'>
        <div class='col-md-6'>
            <div class='card'>
                <div class='card-header'>
                    <h2>Sign Up</h2>
                </div>
                <div class='card-body'>
                    <form method='POST' action='/signup/store'>
                        <div class='mb-3'>
                            <label for='UserName' class='form-label'>User Name</label>
                            <input
                                type='text'
                                class='form-control'
                                id='username'
                                name='username'
                                placeholder='Enter User Name'
                            />
                        </div>
                        <div class='mb-3'>
                            <label for='email' class='form-label'>Email</label>
                            <input
                                type='email'
                                class='form-control'
                                id='email'
                                name='email'
                                placeholder='Enter email'
                            />
                        </div>
                        <div class='mb-3'>
                            <label
                                for='password'
                                class='form-label'
                            >Password</label>
                            <input
                                type='password'
                                class='form-control'
                                id='password'
                                name='password'
                                placeholder='Enter password'
                            />
                        </div>
                        <a href='/login' class='btn btn-primary'>Login</a>
                        <button
                            type='submit'
                            class='btn btn-primary float-end'
                        >Sign Up</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>